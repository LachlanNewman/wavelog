{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "module": "CommonJs",
    "lib": ["ES2020"],
    "target": "ES2019",
    "skipLibCheck": true
  },
  "include": ["src"]
}